<!DOCTYPE html>
<html lang="en">

      <%= render 'headmeta' %> 

  <body>
    <noscript>You need to enable JavaScript to run this app.</noscript>
    <div id="root"></div>

    <div className="Home">
     <%= render 'header' %> 
    <div>
    <main>

    <script>
    $(document).ready(function() {
    $('#example').DataTable();
    } );
	</script>
		   <main>

    <div class="row g-8">
	  <%= render 'sidebar' %> 
      <div class="form-content col-md-8 ml-sm-auto col-lg-8 pt-3 px-4 animate-bottom">
      <div>
      <h1>Product details</h1>
      <p style="color:green;font-weight:bold;"><% :notice %></p>
	  </div>


      <%= form_for @product, :url =>{:action => "update", :id =>@product} do |f| %>
      
	  <label for = "product_name">Name</label>:
	  <div class="mb-3 col-8">
      <input class="form-control" type="text" value=<%= @product.name %> name="product[name]" id="product_name">
      </div>
	  
	  <label for = "product_description">Description</label>:
      <div class="mb-3 col-8">
      <input class="form-control" type="text" value=<%= @product.description %> name="product[description]" id="product_description">
      </div>

       <label for = "product_price">Price</label>:
      <div class="mb-3 col-8">
      <input class="form-control" type="number" value=<%= @product.price %> name="product[price]" id="product_price">
      </div>
	  
      <%= f.submit "Save changes" %>
      <% end %>

      <%= link_to "Back", {:action => "list" } %>

     </div>
    </div>
    </main>
  </div>
